@{
    ViewData["Title"] = "Contact";

}
<section>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 col-xl-4">
                <img src="~/assets/img/illustrations/callback.png" alt="..." />
                <h5 class="text-danger">تواصل معنا</h5>
                <h2>سنتصل بك في أقرب وقت.</h2>
                <p class="text-muted">من الاثنين إلى الجمعة، من الساعة 9 صباحًا حتى 5 مساءً.</p>
            </div>
            <div class="col-md-6 col-lg-5 col-xl-4">
                <form class="row" id="contactForm">
                    <div class="mb-3">
                        <label class="form-label visually-hidden" for="inputName">الاسم</label>
                        <input class="form-control form-quriar-control" id="inputName" type="text" placeholder="الاسم" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label visually-hidden" for="inputEmail">البريد الإلكتروني</label>
                        <input class="form-control form-quriar-control right" id="inputEmail" type="email" placeholder="البريد الإلكتروني" required />
                    </div>
                    <div class="mb-5">
                        <label class="form-label visually-hidden" for="validationTextarea">الرسالة</label>
                        <textarea class="form-control form-quriar-control is-invalid border-400" id="validationTextarea" placeholder="الرسالة" style="height: 150px" required></textarea>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit" id="showAlert">إرسال الرسالة<i class="fas fa-paper-plane ms-2"></i></button>
                    </div>
                </form>

                

            </div>
        </div>
    </div>

    <!-- end of .container-->

</section>

@section scripts {
    <script>
        document.getElementById('contactForm').addEventListener('submit', function (event) {
            // Prevent form submission
            event.preventDefault();

            // Check if form is valid
            if (this.checkValidity()) {
                // Show SweetAlert success message
                Swal.fire({
                    title: 'Success!',
                    text: 'تم إرسال الرسالة بنجاح!',
                    icon: 'success',
                    confirmButtonText: 'OK',
                }).then((result) => {
                    // Check if the user clicked "OK"
                    if (result.isConfirmed) {
                        // Redirect to the index page of the home controller
                        window.location.href = '@Url.Action("Index", "Home")';
                    }
                });
            } else {
                // If form is not valid, show browser's default validation messages
                this.reportValidity();
            }
        });
    </script>
}